<Window x:Class="sapr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:sapr.Views"
        xmlns:viewmodel="clr-namespace:sapr.ViewModels"
        xmlns:local="clr-namespace:sapr"
        mc:Ignorable="d"
        Title="rwyh's Sapr" WindowState="Maximized" >

    <Window.DataContext>
        <viewmodel:MainWindowViewModel/>
    </Window.DataContext>
    

    <TabControl>
        <TabItem Header="PreProcessor">
            <v:PreProcessorView/>
        </TabItem>
        <TabItem Header="PostProcessor" IsEnabled="{Binding PostProcessorEnabled}">
            <v:ProccesorView/>
        </TabItem>
    </TabControl>
</Window>
